<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:id="@+id/linear1">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="1dp"
            android:stateListAnimator="@drawable/selector_elevation"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15"
                            android:gravity="left"
                            android:textSize="18sp"
                            android:text="姓名"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/sname"
                            android:textColor="@color/bg_Black"
                            android:text="张三三"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="设备"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="center"
                            android:id="@+id/sdev"
                            android:textSize="20sp"
                            android:textColor="@color/bg_Black"
                            android:text="跑步机"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="left"
                            android:textSize="18sp"
                            android:text="住院号"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:id="@+id/shospitalNumber"
                            android:textSize="20sp"
                            android:text="1212"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="left"
                            android:textSize="18sp"
                            android:text="设备编号"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:id="@+id/sdevNumber"
                            android:textSize="20sp"
                            android:text="1212"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="left"
                            android:textSize="18sp"
                            android:text="医嘱完成"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:id="@+id/spercent"
                            android:textSize="20sp"
                          />
                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">
                        <cn.sk.skhstablet.component.PaperButton
                            android:id="@+id/bt_start"
                            widget:paper_corner_radius="19dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="35dp"
                            android:gravity="center_vertical|center"
                            widget:paper_text="启动"
                            widget:paper_text_size="16sp"
                            widget:paper_color="@color/maincolor"
                            widget:paper_text_color="@color/white"
                            android:layout_marginRight="20dp"
                            >
                        </cn.sk.skhstablet.component.PaperButton>
                        <cn.sk.skhstablet.component.PaperButton
                            android:id="@+id/bt_stop"
                            widget:paper_corner_radius="19dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="35dp"
                            android:gravity="center_vertical|center"
                            widget:paper_text="停止"
                            widget:paper_text_size="16sp"
                            widget:paper_color="@color/red"
                            widget:paper_text_color="@color/white"
                            >
                        </cn.sk.skhstablet.component.PaperButton>
                    </LinearLayout>
                </LinearLayout>
                <View android:layout_width="wrap_content"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/gray"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.35"
                    android:layout_margin="@dimen/recycler_margin"
                    android:id="@+id/sry_phy_para">
                </android.support.v7.widget.RecyclerView>
                <View android:layout_width="wrap_content"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_margin="@dimen/recycler_margin"
                    android:background="@color/gray"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:id="@+id/sry_sport_para">
                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">
                    <cn.sk.skhstablet.component.PaperButton
                        android:id="@+id/bt_change"
                        widget:paper_corner_radius="19dp"

                        android:layout_gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="35dp"
                        android:gravity="center_vertical|center"
                        widget:paper_text="确定修改"
                        widget:paper_text_size="16sp"
                        widget:paper_color="@color/red"
                        widget:paper_text_color="@color/white"
                        >
                    </cn.sk.skhstablet.component.PaperButton>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5"
        >
        <android.support.v7.widget.CardView

            android:foreground="?android:attr/selectableItemBackground"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:stateListAnimator="@drawable/selector_elevation"
            android:id="@+id/detailecg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/fontblue"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="心电图"
                    android:gravity="left"
                    android:layout_margin="5dp"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <cn.sk.skhstablet.component.CardiographView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></cn.sk.skhstablet.component.CardiographView>

                    <cn.sk.skhstablet.component.PathView
                        android:layout_width="match_parent"
                        android:id="@+id/ecgView"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:stateListAnimator="@drawable/selector_elevation"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/fontblue"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="今日医嘱"
                    android:gravity="left|center_vertical"
                    android:layout_margin="5dp"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/sp_12"/>
                </LinearLayout>
                <View android:layout_width="wrap_content"
                    android:layout_height="0.5px"
                    android:background="@color/gray"/>
                <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/elv_exercise_plan"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>